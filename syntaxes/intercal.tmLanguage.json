{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Intercal",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#variables-readonly"
		},
		{
			"include": "#foo"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#systemLibraryFunctions"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#decorator"
		},
		{
			"include": "#do"
		}
	],
	
	"repository": {
		"comment": {
			"patterns": [{
				"name": "comment",
				"match": ".*NOTE.*"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.intercal",
				"match": "SUB|NEXT|BY|FORGET|RESUME|STASH|RETRIEVE|IGNORE|REMEMBER|ABSTAIN|FROM|REINSTATE|GIVE UP"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable",
				"match": "[.:,;][0-9]+"	
			}]
		},
		"variables-readonly": {
			"patterns": [{
				"name": "variable.readonly",
				"match": "#[0-9]+"	 	
			}]
		},
		"functions": {
			"patterns": [{
				"name": "function",
				"match": "[(]([0-9]|[0-9][0-9]|[0-9][0-9][0-9]|[2-9][0-9][0-9][0-9])[)]"
			}]
		},
		"systemLibraryFunctions": {
			"patterns": [{
				"name": "function.defaultLibrary",
				"match": "[(]([1][0-9][0-9][0-9])[)]"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator",
				"match": "<-|&|V|V-|$|Â¢|~"
			}]
		},
		"decorator": {
			"patterns": [{
				"name": "entity.name.tag",
				"match": "PLEASE"
			}]
		},
		"do": {
			"patterns": [{
				"name": "entity.name.function",
				"match": "DO"
			}]
		}
		
	},
	"scopeName": "source.intercal"
}